{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/wavefront"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/wavefront"
        },
        "target_platform": {
          "target_platform_id": "{VIB_ENV_ALTERNATIVE_TARGET_PLATFORM}",
          "size": {
            "name": "S4",
            "worker_nodes_instance_count": "1"
          }
        }
      },
      "actions": [
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib"
            },
            "tests_file": "wavefront/goss/goss.yaml",
            "vars_file": "wavefront/runtime-parameters.yaml",
            "remote": {
              "pod": {
                "workload": "deploy-wavefront-proxy"
              }
            }
          }
        },
        {
          "action_id": "ginkgo",
          "params": {
            "resources": {
              "path": "/.vib/wavefront/ginkgo"
            },
            "params": {
              "kubeconfig": "{{kubeconfig}}",
              "namespace": "{{namespace}}",
              "proxy-port": "2878",
              "cluster-name": "fake-wavefront",
              "collection-interval": "55s"
            }
          }
        }
      ]
    }
  }
}
